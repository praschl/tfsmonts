{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": "airbnb",
  "rules": {
    "linebreak-style": ["warn", "windows"],
    "no-unused-vars": "warn",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "webpack.*.js",
          "test/**/*.js"
        ]
      }
    ],
    "sort-imports": 2,
    "import/prefer-default-export": 0,
    "import/no-default-export": 2,
    "import/no-named-default": 0,
    "react/jsx-no-bind": false
  },
  "plugins": [
    "import"
  ],
  "settings": {
    "import/resolver": "webpack"
  }
}
